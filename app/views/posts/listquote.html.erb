<div class="col-lg-12">
	<h1>Listing Posts</h1>
<table >
  <tr>
    <th width="10%">ID</th>
    <th width="25%">Title</th>
    <th width="40%">Content</th>
    <th width="25%">Link</th>
  </tr>
<% @posts.each do |post| %>
	<tr id="replace_div">
		<td><%= post.quote %></td>
		<td><%= post.title %></td>
		<td><%= raw(post.text) %></td>
		<td><a href="<%= post.link %>" target="_blank"><%= post.title %></a></td>
	</tr>
<% end %>
</table>
</div>
<script type="text/javascript">
	jQuery(document).ready(function(){
		setInterval(function(){ 
			jQuery.ajax({	
			    url: 'http://'+window.location.hostname+':3000/ajaxcall',
			    method: 'GET',
			    success: function (data) {
			        jQuery('#replace_div').html(data);
			    }
			});

		}, 5000);
	});
</script>